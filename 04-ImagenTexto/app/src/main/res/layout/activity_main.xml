<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Text" />

    <Button
        android:id="@+id/btnNegrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negrita" />

    <EditText
        android:id="@+id/txtBasico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_usuario"
        android:hint="Nombre de Usuario"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="logo de android"
        android:scaleType="centerInside"
        android:src="@drawable/logoandroid" />

    <TextView
        android:id="@+id/lblEtiqueta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde"
        android:text="@string/texto_ejemplo"
        android:textColor="@color/blanco"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>